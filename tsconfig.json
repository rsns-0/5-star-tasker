{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/decorators"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"#lib/*": ["./lib/*"]
		},
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"types": ["vitest/globals"],
		"skipLibCheck": true,
		"noErrorTruncation": true,
	},
	
	"include": [
		"src",
		"prisma/*.ts"
	],
	"exclude": [
		".history",
		"./history/",
		"internal_scripts",
		"node_modules",
		"dist",
		"tests",
		"typings",
		"scripts",
		"docs",
		"coverage"
	]
}
